{
  "extends": ["airbnb-base"],
  "env": {
    "mocha": true,
    "es6": true,
    "browser": true,
    "node": true,
  },
  "plugins": [
    "flowtype-errors"
  ],
  "globals": {
    "expect": true,
    "sinon": true,
    "assert": true
  },
  "rules": {
    "flowtype-errors/show-errors": 2,
    "import/extensions": ["error", "always", {
      "js": "never",
      "vue": "never"
    }],
    "no-unused-expressions": "off"
  }
}
